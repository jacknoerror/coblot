<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_downframe_white_grey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin_bigger" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人:"
            android:textColor="@color/textcolor_light"
            android:textSize="@dimen/textsize_desc" />

        <!-- 收货人 -->

        <TextView
            android:id="@+id/tv_item_addr_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/common_margin"
            android:text="钟国殿"
            android:textColor="@color/textcolor_dark"
            android:textSize="@dimen/textsize_desc" />

        <TextView
            android:id="@+id/tv_item_addr_isdefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认地址"
            android:textColor="@color/textcolor_light"
            android:textSize="@dimen/textsize_min" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin_bigger" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- 电话 -->

                <TextView
                    android:id="@+id/tv_item_addr_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1008660018"
                    android:textColor="@color/textcolor_light"
                    android:textSize="@dimen/textsize_lit" />

                <!-- 邮编 -->

                <TextView
                    android:id="@+id/tv_item_addr_zip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="邮政编码：314500"
                    android:textColor="@color/textcolor_light"
                    android:textSize="@dimen/textsize_lit" />
            </LinearLayout>

            <!-- 详细地址 -->

            <TextView
                android:id="@+id/tv_item_addr_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="普朗克季度的空间，流口水见到过，千万纯牛奶嘎嘎嘎"
                android:textColor="@color/textcolor_lightest"
                android:textSize="@dimen/textsize_lit" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

</LinearLayout>