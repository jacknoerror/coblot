<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="@dimen/common_margin_bigger"
    android:background="@android:color/white"
    >
    <TextView 
        android:id="@+id/tv_item_cprz_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="诚实小郎君"
        android:textSize="@dimen/textsize_mid"
        android:textColor="@color/bg_red_pink"
        android:paddingLeft="@dimen/common_margin"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin"
        >
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView 
                android:id="@+id/tv_item_cprz_status"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="奖品状态："
                android:textColor="@color/textcolor_light"
                />
            <TextView 
                android:id="@+id/tv_item_cprz_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="中奖时间："
                android:textColor="@color/textcolor_lighter"
                />
            <TextView 
                android:id="@+id/tv_item_cprz_level"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="奖品类型："
                android:textColor="@color/textcolor_lighter"
                />
            
        </LinearLayout>
        <Button 
            android:id="@+id/btn_item_cprz"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="领	取"
            android:layout_gravity="right|bottom"
            android:background="@color/bg_cyan"
            android:textSize="@dimen/textsize_desc"
            android:textColor="#ffffff"
            />
    </LinearLayout>

</LinearLayout>
